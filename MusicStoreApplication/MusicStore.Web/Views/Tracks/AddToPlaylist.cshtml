@model MusicStore.Domain.DTO.AddToPlaylistDTO

@{
    ViewData["Title"] = "Add Track to Playlist";
}

<h2>@ViewData["Title"]</h2>

<h3>@Model.TrackName</h3>

<form asp-action="AddToPlaylistConfirmed" method="post">
    <input type="hidden" asp-for="TrackId" />
    <div class="form-group">
        <label asp-for="SelectedPlaylistId" class="control-label"></label>
        <select asp-for="SelectedPlaylistId" class="form-control" asp-items="@(new SelectList(Model.UserPlaylists, "Id", "Name"))"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Add to Playlist" class="btn btn-primary" />
    </div>
</form>
