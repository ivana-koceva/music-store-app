@model List<MusicStore.Web.Models.Domain.PartnerOrder>

<h2>Partner Store Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Owner</th>
            <th>Cards in Order</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Owner?.UserName</td>
                <td>
                    <ul>
                        @foreach (var cardInOrder in order.CardsInOrders)
                        {
                            <li>@cardInOrder.OrderedCard?.CardName - Quantity: @cardInOrder.Quantity</li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>
